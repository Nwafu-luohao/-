.top{
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  color: #ffffff;
}

.top-text{
  background-color: rgb(54, 54, 63);
  width: 95rpx;
  height: 100rpx;
  font-size: 12pt;
  justify-content: center;
  display: flex;
  align-items: center;
  border: 1rpx solid black;
  margin: 2rpx;
}

.left{
  width: 95rpx;
  height: 100rpx;
  font-size: 9pt;
  justify-content: center;
  display: flex;
  margin: 0;
  border-bottom: 1rpx solid rgb(207, 207, 207);
}

/* ============================================== */


.flex-item {
  width: 92rpx;
  height: 220rpx;
}

.kcb-item {
  position: absolute;
  justify-content: center;
  display: flex;
  align-items: center;
  border-radius: 5px;
}

.smalltext {
  font-size: 8pt;
  color: #fff;
  padding-left: 2px;
}
.scroll {
  height: 97%;
  z-index: 101;
  position: fixed;
}
.box1 .dateBox{
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  margin-top: 20px;
  font-size: 40rpx;
}

.box1{
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.box1>view{
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 34rpx;
}

.dateOn{
  border-radius: 50%;
  background-color: hotpink;
  color: #fff;
}
.ball {
  box-shadow:2px 2px 10px #AAA;
  border-radius: 20px;
  position: absolute; 
}
.font-color{
  color:#a9a9a9;
}
