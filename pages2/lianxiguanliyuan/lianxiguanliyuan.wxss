page{
  overflow: hidden;
  background: #0D1740;
}
.scroll-box{
  white-space: nowrap;
  height: 105vh;
}

.card-box{
  display: inline-block;
}

.card{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  height: 80vh;
  width: 80vw;
  margin: 5vh 10vw;
  background: #F8F2DC;
  border-radius: 10rpx;
}

.view1{
  margin-left: 10rpx;
  font: 1.2em sans-serif;
  font-weight: 400;
}

.view2{
  margin-left: 10rpx;
  color: rgb(32, 23, 23);
}